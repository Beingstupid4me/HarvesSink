# === HarvesSink Backend Config ===
# Data source: "simulation" or "serial"
DATA_SOURCE=simulation

# Serial port (only used when DATA_SOURCE=serial)
SERIAL_PORT=COM3
SERIAL_BAUD=115200

# Database
DATABASE_URL=sqlite+aiosqlite:///./harvessink.db

# LLM (optional, for RAG-lite nudges)
OPENAI_API_KEY=
LLM_ENABLED=false

# Simulation
SIM_INTERVAL_MS=500
SIM_NUM_NODES=50
